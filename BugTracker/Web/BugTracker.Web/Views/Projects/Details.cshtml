@model BugTracker.Web.ViewModels.Projects.DetailsProjectViewModel

@{
    ViewData["Title"] = "Project Details";
}

<h1>@Model.Name</h1>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    @if (Model.Bugs.Count() > 0)
    {
        <h1>Bugs</h1>
        <div>
            <table class="table table-bordered table-hover text-center">
                <thead>
                    <tr>
                        <th scope="col">
                            Name
                        </th>
                        <th scope="col">
                            Priority
                        </th>
                        <th scope="col">
                            Status
                        </th>
                        <th scope="col">
                            Severity
                        </th>
                        <th scope="col">
                            Due date
                        </th>
                        <th scope="col">
                            Assigned
                        </th>
                        <th scope="col">
                            Bug Details
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bug in Model.Bugs)
                    {
                        if (bug.Priority.ToString() == "High")
                        {
                            <tr style="transform: rotate(0);" class="table-danger text-dark">
                                <td>
                                    @Html.DisplayName(bug.Name)
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Priority), bug.Priority))
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Status), bug.Status))
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Severity), bug.Severity))
                                </td>
                                <td>
                                    @Html.DisplayName(bug.DueDate.ToString("d"))
                                </td>
                                <td>
                                    @Html.DisplayName(bug.Assigned)
                                </td>
                                <th scope="row">
                                    <a class="stretched-link text-info" asp-action="Details" asp-controller="Bugs" asp-route-id="@bug.Id">Bug Details</a>
                                </th>
                            </tr>
                        }
                        else if (bug.Priority.ToString() == "Medium")
                        {
                            <tr style="transform: rotate(0);" class="table-warning text-dark">
                                <td>
                                    @Html.DisplayName(bug.Name)
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Priority), bug.Priority))
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Status), bug.Status))
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Severity), bug.Severity))
                                </td>
                                <td>
                                    @Html.DisplayName(bug.DueDate.ToString("d"))
                                </td>
                                <td>
                                    @Html.DisplayName(bug.Assigned)
                                </td>
                                <th scope="row">
                                    <a class="stretched-link text-info" asp-action="Details" asp-controller="Bugs" asp-route-id="@bug.Id">Bug Details</a>
                                </th>
                            </tr>
                        }
                        else if (bug.Priority.ToString() == "Low")
                        {
                            <tr style="transform: rotate(0);" class="table-secondary text-dark">
                                <td>
                                    @Html.DisplayName(bug.Name)
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Priority), bug.Priority))
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Status), bug.Status))
                                </td>
                                <td>
                                    @Html.DisplayName(Enum.GetName(typeof(BugTracker.Data.Models.Enums.Severity), bug.Severity))
                                </td>
                                <td>
                                    @Html.DisplayName(bug.DueDate.ToString("d"))
                                </td>
                                <td>
                                    @Html.DisplayName(bug.Assigned)
                                </td>
                                <th scope="row">
                                    <a class="stretched-link text-info" asp-action="Details" asp-controller="Bugs" asp-route-id="@bug.Id">Bug Details</a>
                                </th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <nav>
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="@Url.Action("Details", "Projects", new { id = Model.Id, page = (this.Model.CurrentPage - 1) })">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= this.Model.PagesCount; i++)
                {
                    var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                    <li class="page-item @active">
                        <a class="page-link"
                           href="@Url.Action("Details", "Projects", new { id = Model.Id, page = @i })">@i</a>
                    </li>
                }
                @if (Model.CurrentPage == Model.PagesCount)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="@Url.Action("Details", "Projects", new { id = Model.Id, page = (this.Model.CurrentPage + 1) })">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
    <div class="row justify-content-center">
        <a class="btn btn-success" asp-action="DetailsWithClosedBugs" asp-route-id="@Model.Id">Show all Closed bugs</a>
    </div>

</div>


<div>
    @if (this.User.IsInRole("CompanyAdministrator"))
    {
        <a class="btn btn-danger" asp-area="Administration" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    }
    <a class="btn btn-primary" asp-action="Report" asp-route-id="@Model.Id">Report a bug</a>
    <a class="btn btn-primary" asp-action="Index">Back to your Projects</a>
</div>


