@model BugTracker.Web.ViewModels.Projects.DetailsProjectViewModel

@{
    ViewData["Title"] = "Project Details";
}

<h1>@Model.Name</h1>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    @foreach (var bug in Model.Bugs)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(bug => bug.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(bug => bug.Name)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(bug => bug.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(bug => bug.Status)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(bug => bug.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(bug => bug.Description)
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-action="Join" asp-route-id="@Model.Id">Join</a>  |
    <a asp-action="Report" asp-route-id="@Model.Id">Report a bug</a>  |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>  |
    <a asp-action="Index">Back to List</a>
</div>


