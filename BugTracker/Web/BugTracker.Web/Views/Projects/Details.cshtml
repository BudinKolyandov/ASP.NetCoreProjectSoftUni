@model BugTracker.Web.ViewModels.Projects.DetailsProjectViewModel

@{
    ViewData["Title"] = "Project Details";
}

<h1>@Model.Name</h1>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <h1>Bugs</h1>
    @foreach (var bug in Model.Bugs)
    {
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Severity
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayName(bug.Name)
                        </td>
                        <td>
                            @Html.DisplayName(bug.Status)
                        </td>

                        <td>
                            @Html.DisplayName(bug.Severity)
                        </td>
                        <td>
                            <a asp-action="Details" asp-controller="Bugs" asp-route-id="@bug.Id">Bug Details</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

     }
</div>
<div>
    <a asp-action="Join" asp-route-id="@Model.Id">Join</a>  |
    <a asp-action="Report" asp-route-id="@Model.Id">Report a bug</a>  |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>  |
    <a asp-action="Index">Back to List</a>
</div>


