@{
    ViewBag.Title = "Error occurred";
}

<div class="container-fluid">
    <div class="text-center">
        <div class="error mx-auto" data-text="404">500</div>
        <p class="lead text-gray-800 mb-5">Error</p>
        <p class="text-gray-500 mb-0">Sorry, an error occurred while executing your request.</p>
        @if (this.User.Identity.IsAuthenticated)
        {
            <a asp-action="IndexLogged" asp-controller="Home">&larr; Back to Home Page</a>
        }
        else
        {
            <a asp-action="Index" asp-controller="Home">&larr; Back to Home Page</a>
        }
    </div>

</div>