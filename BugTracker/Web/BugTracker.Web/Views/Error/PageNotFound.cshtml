@{
    ViewBag.Title = "Page Not Found";
}

<div class="container-fluid">
    <div class="text-center">
        <div class="error mx-auto" data-text="404">404</div>
        <p class="lead text-gray-800 mb-5">Page Not Found</p>
        <p class="text-gray-500 mb-0">It looks like you tried to access a page that doesn't exist...</p>
        @if (this.User.Identity.IsAuthenticated)
        {
            <a asp-action="IndexLogged" asp-controller="Home">&larr; Back to Home Page</a>
        }
        else
        {
            <a asp-action="Index" asp-controller="Home">&larr; Back to Home Page</a>
        }
    </div>

</div>